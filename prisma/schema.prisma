generator client {
  provider = "prisma-client"
  output   = "../prismaClient/prisma"
}

datasource db {
  provider = "postgresql"
}

// Модель пользователя (владельца недвижимости)
// Модель пользователя (владельца недвижимости)
model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  phone         String?
  emailVerified DateTime?
  image         String?
  properties    Property[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("users")
}

// Модель для OAuth аккаунтов
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Модель для сессий
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Модель для verification tokens (для email провайдеров)
model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Модель недвижимости
model Property {
  id           String       @id @default(cuid())
  ownerId      String
  owner        User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  name         String
  type         PropertyType
  description  String       @db.Text
  locationId   String       @unique
  location     Location     @relation(fields: [locationId], references: [id], onDelete: Cascade)
  beds         Int
  baths        Int
  squareFeet   Int          @map("square_feet")
  amenities    String[] // Массив строк для удобств
  rates        Rates        @relation(fields: [ratesId], references: [id])
  ratesId      String       @unique
  sellerInfo   SellerInfo   @relation(fields: [sellerInfoId], references: [id])
  sellerInfoId String       @unique
  images       String[] // Массив путей к изображениям
  isFeatured   Boolean      @default(false) @map("is_featured")
  createdAt    DateTime     @default(now()) @map("createdAt")
  updatedAt    DateTime     @updatedAt @map("updatedAt")

  @@map("properties")
}

// Модель локации
model Location {
  id       String    @id @default(cuid())
  street   String
  city     String
  state    String
  zipcode  String
  property Property?

  @@map("locations")
}

// Модель цен (rates)
model Rates {
  id       String    @id @default(cuid())
  nightly  Int? // Цена за ночь
  weekly   Int? // Цена за неделю
  monthly  Int? // Цена за месяц
  yearly   Int? // Цена за год
  property Property?

  @@map("rates")
}

// Модель информации о продавце
model SellerInfo {
  id       String    @id @default(cuid())
  name     String
  email    String
  phone    String
  property Property?

  @@map("seller_info")
}

// Enum для типа недвижимости
enum PropertyType {
  APARTMENT        @map("Apartment")
  CONDO            @map("Condo")
  HOUSE            @map("House")
  STUDIO           @map("Studio")
  COTTAGE_OR_CABIN @map("Cottage Or Cabin")
  CHALET           @map("Chalet")
}
